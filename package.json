{
  "name": "accessassist",
  "private": true,
  "version": "1.0.0",
  "type": "module",
  "description": "Inclusive AI for Complaints - Accessibility-first complaint letter generation platform",
  "keywords": ["accessibility", "ai", "complaints", "sign-language", "voice-input", "screen-reader"],
  "scripts": {
    "dev": "vite --host",
    "build": "tsc && vite build",
    "preview": "vite preview --host",
    "type-check": "tsc --noEmit",
    "lint": "eslint . --ext ts,tsx --report-unused-disable-directives --max-warnings 0",
    "lint:fix": "eslint . --ext ts,tsx --report-unused-disable-directives --max-warnings 0 --fix",
    "setup": "node scripts/dev-setup.js",
    "setup:basic": "npm install && echo 'Setup complete! Run npm run dev to start the development server.'",
    "test:accessibility": "echo 'Run lighthouse accessibility audit or axe-core tests'",
    "clean": "rm -rf node_modules/.vite dist && npm install",
    "quick-start": "npm install && npm run dev"
  },
  "dependencies": {
    "@github/spark": "^0.1.0",
    "@hookform/resolvers": "^3.3.2",
    "@phosphor-icons/react": "^2.0.15",
    "@radix-ui/react-accordion": "^1.1.2",
    "@radix-ui/react-alert-dialog": "^1.0.5",
