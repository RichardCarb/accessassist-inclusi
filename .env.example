# AccessAssist Environment Configuration
# Copy this file to .env.local for local development

# Optional: OpenAI API configuration for enhanced AI features
# The app works without these keys using fallback functionality
VITE_OPENAI_API_KEY=your_openai_api_key_here
VITE_OPENAI_ENDPOINT=https://api.openai.com/v1

# Optional: Speech recognition API configuration
VITE_SPEECH_API_KEY=your_speech_api_key_here
VITE_SPEECH_REGION=your_speech_region_here

# Optional: Microsoft Graph API for email integration
VITE_GRAPH_CLIENT_ID=your_graph_client_id_here
VITE_GRAPH_CLIENT_SECRET=your_graph_client_secret_here

# Development settings
VITE_NODE_ENV=development
VITE_LOG_LEVEL=info

# Feature flags (true/false)
VITE_ENABLE_VOICE_INPUT=true
VITE_ENABLE_SIGN_LANGUAGE=true
VITE_ENABLE_AI_FEATURES=true
VITE_ENABLE_DEBUG_MODE=false